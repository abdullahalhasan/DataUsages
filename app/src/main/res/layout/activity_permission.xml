<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.appeteria.introsliderexample.PermissionActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multiple Permission"
        android:layout_margin="24dp"
        android:padding="8dp"
        android:onClick="multiplePermission"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment Permission"
        android:layout_margin="24dp"
        android:padding="8dp"
        android:onClick="fragmentPermission"/>
    <TextView
        android:id="@+id/singlePermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click on Download to check Single permission. To test again, change the app permission in settings or reinstall the app"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_margin="24dp"
        android:padding="8dp"
        android:layout_marginBottom="123dp" />
    <TextView
        android:id="@+id/download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_margin="24dp"
        android:padding="8dp"
        android:onClick="downloadFile"
        android:layout_marginBottom="123dp" />

</LinearLayout>
